{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "open-realm",
                    "roles": [
                        {
                            "name": "public",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "authorizer",
                            "permissions": [
                                {
                                    "uri": "authorize",
                                    "match": "exact",
                                    "allow": {
                                        "register": true
                                    }
                                }
                            ]
                        },
                        {
                            "name": "dynamic",
                            "authorizer": "authorize"
                        }
                    ]
                },
                {
                    "name": "restrictive-realm",
                    "roles": [
                        {
                            "name": "user",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "realm1",
                    "trace": true,
                    "roles": [
                        {
                            "name": "authorizer",
                            "permissions": [
                                {
                                    "uri": "authorize",
                                    "match": "exact",
                                    "allow": {
                                        "register": true
                                    }
                                }
                            ]
                        },
                        {
                            "name": "authenticator",
                            "permissions": [
                                {
                                    "uri": "authenticate",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "dynamic_user",
                            "authorizer": "authorize"
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "anonymous": {
                                    "type": "static",
                                    "role": "public"
                                },
                                "wampcra": {
                                    "type": "static",
                                    "users": {
                                        "homer": {
                                            "secret": "secret123",
                                            "role": "user"
                                        }
                                    }
                                },
                                "ticket": {
                                    "type": "dynamic",
                                    "authenticator": "authenticate",
                                    "authorizer": "authorize"
                                }
                            }
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "OpenRealmSession.OpenRealmSession",
                    "realm": "open-realm",
                    "role": "public"
                },
                {
                    "type": "class",
                    "classname": "LoopingPublish.LoopingPublish",
                    "realm": "open-realm",
                    "role": "public"
                },
                {
                    "type": "class",
                    "classname": "AuthenticatorSession.AuthenticatorSession",
                    "realm": "realm1",
                    "role": "authenticator"
                },
                {
                    "type": "class",
                    "classname": "AuthorizerSession.AuthorizerSession",
                    "realm": "realm1",
                    "role": "authorizer"
                }
            ]
        }
    ]
}